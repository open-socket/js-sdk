{
  "name": "@open-socket/react",
  "version": "1.3.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "clean": "shx rm -rf ./dist",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "babel src --out-dir dist/cjs --extensions .js,.jsx --presets @babel/preset-env --ignore 'src/**/*.test.js'",
    "build:esm": "babel src --out-dir dist/esm --extensions .js,.jsx --presets @babel/preset-env --ignore 'src/**/*.test.js'",
    "test": "jest",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "react": "^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "jest": "^27.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ]
  }
}
