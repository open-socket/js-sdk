{
  "include-component-in-tag": true,
  "tag-separator": "@",
  "separate-pull-requests": true,
  "plugins": ["node-workspace"],
  "packages": {
    "packages/core": {
      "release-type": "node",
      "prerelease": false,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": ["README.md"],
      "versioning": "default"
    },
    "packages/react": {
      "release-type": "node",
      "prerelease": false,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": ["README.md"],
      "versioning": "default"
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "✨ New Features"
    },
    {
      "type": "fix",
      "section": "🐛 Bug Fixes"
    },
    {
      "type": "chore",
      "section": "🧹 Chore"
    },
    {
      "type": "docs",
      "section": "📚 Documentation"
    },
    {
      "type": "perf",
      "section": "🚀 Performance"
    },
    {
      "type": "build",
      "hidden": true,
      "section": "🛠️ Build"
    },
    {
      "type": "deps",
      "section": "📦 Dependencies"
    },
    {
      "type": "ci",
      "hidden": true,
      "section": "🚦 CI"
    },
    {
      "type": "refactor",
      "section": "🔄 Refactoring"
    },
    {
      "type": "revert",
      "section": "🔙 Reverts"
    },
    {
      "type": "style",
      "hidden": true,
      "section": "🎨 Styling"
    },
    {
      "type": "test",
      "hidden": true,
      "section": "🧪 Tests"
    }
  ],
  "include-contributors": true
}
